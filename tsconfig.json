{
	"compilerOptions": {
		"target": "es2022",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./dist",
		"baseUrl": ".",
		"paths": {
			"@config/*": [
				"./src/config/*"
			],
			"@core/*": [
				"./src/core/*"
			],
			"@helpers/*": [
				"./src/helpers/*"
			],
			"@infra/*": [
				"./src/infra/*"
			],
			"@modules/*": [
				"./src/modules/*"
			],
		},
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
	},
	"include": ["src/**/*.ts"],
}